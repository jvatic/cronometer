{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/js",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "es2017.object", "es2017.string", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "downlevelIteration": true
  },
  "exclude": [
    "bin",
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
